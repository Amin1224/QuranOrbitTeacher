<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.registration_csr.ScoundForm">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:gravity="center"
        android:padding="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/csr"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:text="Qualification"
        android:fontFamily="@font/montserrat_regular"

        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/qualification_set_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/qualification_set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_qualification"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular"

        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/qualification"
        app:layout_constraintTop_toBottomOf="@+id/qualification" />

    <ImageView
        android:id="@+id/qualification_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/arrow_drop"
        app:layout_constraintBottom_toBottomOf="@+id/qualification_set_text"
        app:layout_constraintEnd_toEndOf="@+id/view" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toTopOf="@+id/age"
        app:layout_constraintEnd_toEndOf="@+id/qualification"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/qualification_set_text"
        app:layout_constraintTop_toBottomOf="@+id/qualification_set_text" />

    <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:text="Shift Time"
        android:fontFamily="@font/montserrat_regular"

        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/shift_set_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/shift_set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/shift_time"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/age"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <ImageView
        android:id="@+id/shift_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/arrow_drop"
        app:layout_constraintBottom_toBottomOf="@+id/shift_set_text"
        app:layout_constraintEnd_toEndOf="@+id/qualification_menu"
        app:layout_constraintTop_toTopOf="@+id/shift_set_text" />


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toTopOf="@+id/password1"
        app:layout_constraintEnd_toEndOf="@+id/shift_menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shift_set_text"
        app:layout_constraintTop_toBottomOf="@+id/shift_set_text" />


    <TextView
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:text="@string/password"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_regular"

        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/shift_menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shift_set_text"
        app:layout_constraintTop_toBottomOf="@+id/view1" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="Password"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/addres"
        app:layout_constraintEnd_toEndOf="@+id/password1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/password1"
        app:layout_constraintTop_toBottomOf="@+id/password1" />

    <TextView
        android:id="@+id/addres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:text="@string/address"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_regular"

        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="Address"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/cnic1"
        app:layout_constraintEnd_toEndOf="@+id/addres"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/addres"
        app:layout_constraintTop_toBottomOf="@+id/addres" />

    <TextView
        android:id="@+id/cnic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:text="@string/cnic_no"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular"

        app:layout_constraintBottom_toTopOf="@+id/cnic_no"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <EditText
        android:id="@+id/cnic_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="CNIC No"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_regular"

        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/cnic1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/cnic1"
        app:layout_constraintTop_toBottomOf="@+id/cnic1" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cnic_Image"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular"

        app:layout_constraintBottom_toTopOf="@+id/images"
        app:layout_constraintStart_toStartOf="@+id/cnic_no"
        app:layout_constraintTop_toBottomOf="@+id/cnic_no" />


    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/cnic_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/front_page"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="2dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/front_image"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"

                app:layout_constraintStart_toStartOf="@+id/cnic_no"
                app:layout_constraintTop_toBottomOf="@+id/cnic_no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_page"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="2dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/textView632"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_image"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"

                app:layout_constraintStart_toStartOf="@+id/cnic_no"
                app:layout_constraintTop_toBottomOf="@+id/cnic_no" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Step 2/3"
        android:fontFamily="@font/montserrat_regular"

        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/images" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary_color"
        android:elevation="6dp"
        android:padding="12dp"
        android:visibility="visible"
        android:paddingVertical="16dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_regular"

        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/next"
        app:layout_constraintEnd_toEndOf="@+id/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>